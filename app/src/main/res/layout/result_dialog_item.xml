<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtResultTotalQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Total Questions : " />

    <TextView
        android:id="@+id/txtResultCorrectAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultTotalQuestion"
        android:layout_centerInParent="true"
        android:text="Correct Answer Count : " />

    <TextView
        android:id="@+id/txtResultWrongAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultCorrectAnswerCount"
        android:layout_centerInParent="true"
        android:text="Wrong Answer Count : " />

    <TextView
        android:id="@+id/txtResultSkipAnswerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultWrongAnswerCount"
        android:layout_centerInParent="true"
        android:text="Skip Answer Count : " />

    <TextView
        android:id="@+id/txtResultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultSkipAnswerCount"
        android:layout_centerInParent="true"
        android:text="Your Score is " />

    <TextView
        android:id="@+id/txtResultRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultScore"
        android:layout_centerInParent="true"
        android:text="Remarks : " />

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtResultRemarks"
        android:layout_centerInParent="true"
        android:text="OK" />

</RelativeLayout>